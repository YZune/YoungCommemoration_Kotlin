<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddEventActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

            <TextView
                    android:layout_marginBottom="-8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="效果预览"/>

            <include
                    layout="@layout/item_event"/>

            <TextView
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="选择类型"/>

            <com.google.android.material.chip.ChipGroup
                    android:id="@+id/cg_type"
                    app:singleSelection="true"
                    app:chipSpacing="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                        android:checkable="true"
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/pink"
                        android:id="@+id/chip_m"
                        android:layout_marginStart="16dp"
                        android:text="纪念日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.chip.Chip
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/colorAccent"
                        android:checkable="true"
                        android:layout_marginStart="16dp"
                        android:text="生日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.chip.Chip
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/orange"
                        android:checkable="true"
                        android:layout_marginStart="16dp"
                        android:text="农历生日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <com.google.android.material.chip.Chip
                        android:textColor="@android:color/white"
                        app:chipBackgroundColor="@color/red"
                        android:checkable="true"
                        android:layout_marginStart="16dp"
                        android:text="倒数日"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </com.google.android.material.chip.ChipGroup>

            <View
                    android:alpha="0.6"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            <LinearLayout
                    android:id="@+id/ll_event"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="?android:attr/selectableItemBackground">

                <TextView
                        style="@style/IconTextViewStyle"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="#1571D5"/>

                <TextView
                        android:id="@+id/et_event"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="寿星"
                        android:lines="1"
                        android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_date"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="?android:attr/selectableItemBackground">

                <TextView
                        style="@style/IconTextViewStyle"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/orange"/>

                <TextView
                        android:id="@+id/et_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="出生日期"
                        android:lines="1"
                        android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_time"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="?android:attr/selectableItemBackground">

                <TextView
                        style="@style/IconTextViewStyle"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="#FFA622"/>

                <TextView
                        android:id="@+id/et_time"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="周一    第1 - 2节"
                        android:lines="1"
                        android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_msg"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="?android:attr/selectableItemBackground">

                <TextView
                        style="@style/IconTextViewStyle"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/lightBlue"/>

                <TextView
                        android:id="@+id/et_msg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="备注"
                        android:lines="1"
                        android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:background="?android:attr/selectableItemBackground">

                <TextView
                        style="@style/IconTextViewStyle"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="@color/red"/>

                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="24dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="置顶"
                        android:lines="1"
                        android:textSize="14sp"/>

                <androidx.appcompat.widget.SwitchCompat
                        android:layout_marginEnd="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>